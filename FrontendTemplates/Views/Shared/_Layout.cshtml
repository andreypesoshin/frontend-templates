<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Html.RenderCssBundle("~/Content/app.css.bundle", BundleOptions.MinifiedAndCombined)
    @Html.RenderJsBundle("~/Scripts/modernizr.js.bundle", BundleOptions.MinifiedAndCombined)
</head>
<body>
    @{
        Html.RenderPartial("_NavBar");
    }

    <div class="container body-content">
        @RenderBody()

        @{
            Html.RenderPartial("_Footer");
        }
    </div>

    @Html.RenderJsBundle("~/Scripts/jquery.js.bundle", BundleOptions.MinifiedAndCombined)
    @Html.RenderJsBundle("~/Scripts/bootstrap.js.bundle", BundleOptions.MinifiedAndCombined)

    @*RenderSection("scripts", required: true)*@
</body>
</html>

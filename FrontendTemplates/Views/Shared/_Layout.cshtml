<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ServiceStack Bundler in action</title>

    @Html.CustomRenderCssBundle("~/Content/app.css.bundle")

    @Html.CustomRenderJsBundle("~/Scripts/dist.js.bundle")
    @Html.CustomRenderJsBundle("~/Scripts/app.js.bundle")
</head>
<body>
    @{
        Html.RenderPartial("_NavBar");
    }

    <div class="container body-content">
        @RenderBody()

        @{
            Html.RenderPartial("_Footer");
        }
    </div>

</body>
</html>
